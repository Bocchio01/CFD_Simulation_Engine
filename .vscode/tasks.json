{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/utils/cJSON/*.c",
                "${workspaceFolder}/src/utils/cALGEBRA/*.c",
                "${workspaceFolder}/src/utils/cFILE/*.c",
                "${workspaceFolder}/src/utils/cLOG/*.c",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/in/*.c",
                "${workspaceFolder}/src/in/parsers/*.c",
                "${workspaceFolder}/src/engine/*.c",
                "${workspaceFolder}/src/engine/mesh/*.c",
                "${workspaceFolder}/src/engine/methods/*.c",
                "${workspaceFolder}/src/engine/schemes/*.c",
                "${workspaceFolder}/src/out/*.c",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}